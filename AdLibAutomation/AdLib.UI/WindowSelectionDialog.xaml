<Window x:Class="AdLib.UI.WindowSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Window" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="WindowListBox" DisplayMemberPath="Title" Margin="10" />
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
